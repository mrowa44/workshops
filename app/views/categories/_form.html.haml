.panel.panel-default
  .panel-body
    = simple_form_for category, html: { class: 'form-horizontal' } do |f|
      - if category.errors.any?
        #error_explanation
          %h2= "#{pluralize(category.errors.count, "error")} prohibited this category from being saved:"
          %ul
            - category.errors.full_messages.each do |msg|
              %li= msg

      .form-group
        = f.label :name
        = f.text_field :name, class: 'form-control'

      = button_tag (f.submit), class: 'btn btn-default' do
        %i.fa.fa-plus-circle
        Save
